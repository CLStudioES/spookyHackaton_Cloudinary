---
import "@fontsource-variable/dancing-script";

const { id, label, onClick } = Astro.props;
---

<button
    id={id}
    class="px-4 py-3 border border-black rounded-xl fuente-urbanist text-sm md:text-xl tracking-wider hover:scale-105 transition-all duration-500 bg-white bg-opacity-75 sm:bg-opacity-20 sm:backdrop-filter sm:backdrop-blur-lg
            border-opacity-75 shadow-lg font-medium"
    >{label}</button
>
<style>
    .fuente-handwritte {
        font-family: "Dancing Script Variable", cursive;
    }
</style>

<script define:vars={{ id, onClick }}>
    document.getElementById(id).addEventListener("click", onClick);
</script>
