---
import { getCldImageUrl } from "astro-cloudinary/helpers";

interface Props {
    prompt: string;
    Url: string;
}

const { prompt, Url } = Astro.props;
---

<div
    class="relative w-[20vw] max-w-[300px] aspect-[4/5] mx-auto transform -rotate-1 z-50"
>
    <div class="absolute inset-0 bg-black -rotate-2 shadow-md"></div>
    <div
        class="absolute inset-0 bg-white border-2 border-black rotate-2 shadow-md"
    >
    </div>
    <div class="relative z-10 w-full h-full p-2 bg-white border-2 border-black">
        <img
            id="containerRecuerdo"
            src={getCldImageUrl({
                src: Url,
                replaceBackground: prompt,
                aspectRatio: "3:4",
                crop: "fill",
                gravity: "face",
            })}
            alt="Imagen del fallecido"
            class="w-full h-full object-cover"
        />
    </div>
</div>
