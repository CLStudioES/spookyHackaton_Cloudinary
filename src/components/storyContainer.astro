---
interface Props {
    titulo: string;
    texto: string;
}
const { titulo, texto } = Astro.props;
---

<article class="h-auto w-auto p-8 rounded-2xl">
    <h2 class="text-7xl text-black fuente-handwritte font-bold">{titulo}</h2>
    <hr class="sep-3" />
    <p
        class="mt-10 mb-4 fuente-urbanist text-2xl tracking-widest font-extralight"
    >
        {texto}
    </p>
</article>
<style>
    hr.sep-3 {
        border: none;
        height: 1px;
        margin-top: 20px;
        background-image: linear-gradient(to right, #f0f0f0, #8f8f8f, #f0f0f0);
    }
    hr.sep-3::after {
        content: "ยง";
        display: inline-block;
        position: absolute;
        left: 50%;
        transform: translate(-50%, -50%) rotate(60deg);
        transform-origin: 50% 50%;
        padding: 1rem;
        background-color: white;
    }
</style>
