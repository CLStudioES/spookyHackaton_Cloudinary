---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Spooky Hackaton-Crea tu personaje">
    <main>
        <div id="background">
            <div id="foglayer_01" class="fog hidden lg:flex">
                <div class="image01"></div>
                <div class="image02"></div>
            </div>
            <div id="foglayer_02" class="fog hidden lg:flex">
                <div class="image01"></div>
                <div class="image02"></div>
            </div>
            <div id="foglayer_03" class="fog hidden lg:flex">
                <div class="image01"></div>
                <div class="image02"></div>
            </div>
            <div class="moon"></div>
        </div>
        <section class="min-h-screen flex items-center justify-center">
            <div
                class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:h-[75vh] lg:w-[75vw] gap-x-36 z-50"
            >
                <div
                    class="p-4 rounded flex items-center justify-center relative"
                >
                    <img
                        src="/img/elements/grave.png"
                        alt="Grave"
                        class="w-full h-auto"
                    />
                    <article
                        class="absolute inset-0 flex flex-col items-center my-20 lg:my-36 lg:mx-56"
                    >
                        <header class="flex flex-col items-center">
                            <span
                                class="h-24 w-24 lg:h-44 lg:w-44 bg-white rounded-full"
                            ></span>
                            <h2
                                id="labelNombre"
                                class="text-sm lg:text-2xl graven-text uppercase w-40 lg:w-96 truncate text-center pt-4 lg:pt-8"
                            >
                                Nombre del difunto
                            </h2>
                            <p
                                class="graven-text uppercase truncate text-center pt-1 lg:pt-3 text-xs lg:text-xl"
                            >
                                <span id="labelFNacimiento">2024-10-22</span> - 2024-10-22
                            </p>
                        </header>
                        <footer class="my-auto bottom-0 flex overflow-clip">
                            <p
                                id="labelPalabras"
                                class="graven-text uppercase w-40 lg:w-96 text-xs lg:text-2xl text-center lg:pt-36"
                            >
                                "FINIS OMNIS VITA MORS EST"
                            </p>
                        </footer>
                    </article>
                </div>
                <div class="p-4 flex items-center justify-center">
                    <article
                        class="bg-white h-auto w-full lg:w-[75%] rounded-2xl bg-opacity-70 flex flex-col p-8 lg:p-12"
                    >
                        <h2 class="text-5xl fuente-handwritte font-bold">
                            ¿Quién eres?
                        </h2>
                        <h3 class="text-2xl fuente-handwritte font-bold pt-12">
                            Nombre y apellidos:
                        </h3>
                        <input
                            id="inputName"
                            type="text"
                            placeholder="Nombre y apellidos del difunto"
                            class="mt-3 bg-white bg-opacity-50 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-trickle-purple focus:border-transparent"
                        />
                        <h3 class="text-2xl fuente-handwritte font-bold pt-12">
                            Fecha de nacimiento
                        </h3>
                        <input
                            id="inputFnacimiento"
                            type="date"
                            placeholder="Fecha de nacimiento del difunto"
                            class="mt-3 bg-white bg-opacity-50 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-trickle-purple focus:border-transparent"
                        />
                        <h3 class="text-2xl fuente-handwritte font-bold pt-12">
                            Últimas palabras
                        </h3>
                        <textarea
                            maxlength="70"
                            id="inputPalabras"
                            placeholder="Últimas palabras del difunto"
                            class="mt-3 bg-white bg-opacity-50 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-trickle-purple focus:border-transparent"
                        ></textarea>
                    </article>
                </div>
            </div>
        </section>
    </main>
    <script is:inline>
        function updateLabels() {
            const inputName = document.getElementById("inputName");
            const inputFnacimiento =
                document.getElementById("inputFnacimiento");
            const inputPalabras = document.getElementById("inputPalabras");
            const nombreDisplay = document.getElementById("labelNombre");
            const labelFNacimiento =
                document.getElementById("labelFNacimiento");
            const labelPalabras = document.getElementById("labelPalabras");

            if (inputName) {
                inputName.addEventListener("input", function () {
                    nombreDisplay.textContent =
                        this.value || "Nombre del difunto";
                });
            }

            if (inputFnacimiento) {
                inputFnacimiento.addEventListener("input", function () {
                    labelFNacimiento.textContent = this.value || "2024-10-22";
                });
            }

            if (inputPalabras) {
                inputPalabras.addEventListener("input", function () {
                    labelPalabras.textContent = this.value
                        ? `"${this.value}"`
                        : "FINIS OMNIS VITA MORS EST";
                });
            }
        }

        updateLabels();
        setTimeout(updateLabels, 100);
        document.addEventListener("DOMContentLoaded", updateLabels);
    </script>
</Layout>
