---
import CinemaLayout from "../layouts/cinemaLayout.astro";
import ImageContainer from "../components/imageContainer.astro";
import StoryContainer from "../components/storyContainer.astro";

const aspectUrl = Astro.url.searchParams.get("aspectUrl");
const prompt = "El infierno con fuego y cadáveres";
---

<CinemaLayout title="Spooky Hackaton-Perdiste lo más importante">
    <div class="relative min-h-screen">
        <main
            class="relative z-10 flex flex-col items-center justify-center min-h-screen p-4 w-screen"
        >
            <div class="max-w-7xl w-full text-center">
                <ImageContainer prompt={prompt} aspectUrl={aspectUrl} />
                <StoryContainer
                    titulo={"Más sabe el diablo por viejo que por diablo"}
                    texto="Miraste al abismo y el abismo te devolvió la mirada. Perdiste tu alma y lo pagarás toda la eternidad"
                />
            </div>
            <div
                id="button-container"
                class="flex flex-wrap justify-center gap-4"
            >
                <a
                    href="/gracias"
                    target="_blank"
                    class="px-4 py-3 border border-black rounded-xl fuente-urbanist text-xl tracking-wider font-normal hover:scale-105 transition-all duration-500"
                    >GRACIAS</a
                >
            </div>
        </main>
    </div>
</CinemaLayout>
<style>
    .fuente-handwritte {
        font-family: "Dancing Script Variable", cursive;
    }

    #button-container {
        display: flex;
        margin-top: 20px;
    }
</style>
